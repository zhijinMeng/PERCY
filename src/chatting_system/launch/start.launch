<launch>
    <!-- Define the 'id' parameter -->
    <param name="id" value="$(arg id)" />

    <!-- Launch external_tester.py with the parameter -->
    <node name="external_tester" pkg="chatting_system" type="external_tester.py" output="screen">
        <param name="id" value="$(arg id)" />
    </node>

    <!-- Launch external_microphone.py without additional parameters -->
    <node name="external_microphone" pkg="chatting_system" type="external_microphone.py" output="screen"/>

    <!-- Launch gpt4_server.py with the parameter -->
    <node name="gpt4_server" pkg="gpt_server" type="gpt4_server.py" output="screen">
        <param name="id" value="$(arg id)" />
    </node>
</launch>
